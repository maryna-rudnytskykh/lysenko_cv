.main-info
	@media tablet_desktop
		display flex
		margin-top 50px
	@media phone
		margin-top 10px
		font-size 15px
	@media print
		font-size 13px
		margin-top 0
	&__column
		&_left
			@media tablet_desktop
				flex-grow 1
		&_right
			@media tablet_desktop
				flex-shrink 0
	&__photo
		width 160px
		@media print
			width 120px
		&-container
			text-align right
			@media phone
				text-align: center
			@media print
				text-align: right
	&__label
		color #7f8c8d
		display inline-block
		width 120px
		@media phone
			width 80px
	&__value
		display: inline-block
		margin: 0
	&__title
		margin: 0
		@media desktop
			font-size 40px
	&__subtitle
		margin 0